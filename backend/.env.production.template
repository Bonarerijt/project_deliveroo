# Production Environment Variables Template
# Copy this file to .env.production and update with actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# External Services
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
SENDGRID_API_KEY=your-production-sendgrid-api-key

# Application Configuration
FRONTEND_URL=https://your-production-domain.com
ENVIRONMENT=development

# Security Headers
ALLOWED_HOSTS=your-production-domain.com,api.your-domain.com

# Rate Limiting
RATE_LIMIT_CALLS=50
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/deliveroo/app.log